#!/usr/bin/env bash

# Don't check the server certificate against the available certificate authorities.
FLAG[0]=--no-check-certificate

# Continue getting a partially-downloaded file.
FLAG[1]=--continue

# Turn on options suitable for mirroring.
# Equivalent to -r -N -l inf --no-remove-listing.
# FLAG[2]=--mirror

# Turn on recursive retrieving.
FLAG[3]=--recursive

# Turn on time-stamping.
FLAG[4]=--timestamping

# Specify recursion maximum depth level depth.
FLAG[5]=--level=inf

# Don't remove the temporary .listing files generated by FTP retrievals.
FLAG[6]=--no-remove-listing

# Identify as agent-string to the HTTP server.
#FLAG[7]=--user-agent=Wget

# In certain cases, the local file will be clobbered, or overwritten, upon repeated download.
FLAG[8]=--no-clobber

# After the download is complete, convert the links in the document to make them suitable for local viewing.
FLAG[9]=--convert-links

# Do not ever ascend to the parent directory when retrieving recursively.
#FLAG[10]=--no-parent

echo "Enable flags: ${FLAG[*]}"
wget ${FLAG[*]} "$@"

