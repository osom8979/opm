{
  "permissions": {
    "allow": [
      "Bash(git diff --cached)",
      "Bash(git log --oneline -10)",
      "WebFetch(domain:news.hada.io)",
      "WebFetch(domain:ui.shadcn.com)",
      "WebFetch(domain:www.radix-ui.com)",
      "WebFetch(domain:www.notion.so)",
      "WebFetch(domain:www.notion.com)",
      "WebFetch(domain:www.osom.run)",
      "WebFetch(domain:app.osom.run)"
    ],
    "deny": [
      "Bash(git add:*)",
      "Bash(git push:*)",
      "Bash(npm:*)",
      "Bash(npx:*)"
    ],
    "ask": [
      "Bash(opn-npm --global install:*)",
      "Bash(opn-npx:*)",
      "Bash(opy -m pip install:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "printf '\\033[01;32m%s@%s\\033[00m:\\033[01;34m%s\\033[00m' \"$(whoami)\" \"$(hostname -s)\" \"$(pwd)\""
  },
  "language": "한글",
  "systemPrompt": "After completing tasks, do not provide unnecessary reports or explanations. The tool execution results themselves are sufficient. Keep responses concise to avoid wasting tokens. Omit unnecessary confirmation messages like 'completed successfully' or 'done'."
}
