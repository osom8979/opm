{
    "configurations": {
        "Node.js": {
            "adapter": "vscode-node",
            "filetypes": ["javascript"],
            "default": true,
            "configuration": {
                "request": "launch",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "cwd": "${workspaceRoot}",
                "program": "${workspaceRoot}/main.js"
            }
        },
        "Python": {
            "adapter": "debugpy",
            "filetypes": ["python"],
            "default": true,
            "variables": {},
            "configuration": {
                "request": "launch",
                "type": "python",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "cwd": "${workspaceRoot}",
                "program": "${workspaceRoot}/main.py",
                "env": {
                    "PYTHONPATH": "${workspaceRoot}"
                },
                "args": []
            },
            "breakpoints": {
                "exception": {
                    "raised": "Y",
                    "uncaught": "Y",
                    "userUnhandled": "Y"
                }
            }
        }
    }
}
