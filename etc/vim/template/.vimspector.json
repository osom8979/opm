{
    "configurations": {
        "C-family Launch": {
            "adapter": "CodeLLDB",
            "filetypes": ["cpp", "c", "objc"],
            "configuration": {
                "request": "launch",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "cwd": "${workspaceRoot}/cmake-build-debug",
                "program": "${workspaceRoot}/cmake-build-debug/main"
            },
            "breakpoints": {
                "exception": {
                    "cpp_throw": "Y",
                    "cpp_catch": "N"
                }
            }
        },
        "Rust Launch": {
            "adapter": "CodeLLDB",
            "filetypes": [ "cpp", "c", "objc", "rust" ],
            "configuration": {
                "request": "launch",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "cwd": "${workspaceRoot}",
                "program": "${workspaceRoot}/target/debug/main"
            },
            "breakpoints": {
                "exception": {
                    "cpp_throw": "Y",
                    "cpp_catch": "N"
                }
            }
        },
        "Node.js Launch": {
            "adapter": "vscode-node",
            "filetypes": ["javascript"],
            "default": true,
            "configuration": {
                "request": "launch",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "cwd": "${workspaceRoot}",
                "program": "${workspaceRoot}/main.js"
            }
        },
        "Python Launch": {
            "adapter": "debugpy",
            "filetypes": ["python"],
            "default": true,
            "variables": {
                "VERBOSE_FLAG": "--verbose"
            },
            "configuration": {
                "request": "launch",
                "type": "python",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "cwd": "${workspaceRoot}",
                "program": "${workspaceRoot}/main.py",
                "env": {
                    "PYTHONPATH": "${workspaceRoot}"
                },
                "args": [
                    "${VERBOSE_FLAG}"
                ]
            },
            "breakpoints": {
                "exception": {
                    "raised": "N",
                    "uncaught": "Y",
                    "userUnhandled": "N"
                }
            }
        }
    }
}
