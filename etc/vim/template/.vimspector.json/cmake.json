{
    "configurations": {
        "C-family Launch": {
            "adapter": "CodeLLDB",
            "filetypes": ["cpp", "c", "objc"],
            "configuration": {
                "request": "launch",
                "stopOnEntry": true,
                "console": "integratedTerminal",
                "cwd": "${workspaceRoot}/cmake-build-debug",
                "program": "${workspaceRoot}/cmake-build-debug/main"
            },
            "breakpoints": {
                "exception": {
                    "cpp_throw": "Y",
                    "cpp_catch": "N"
                }
            }
        }
    }
}
