FROM ubuntu:18.04
MAINTAINER zer0 <osom8979@gmail.com>

ENV DEBIAN_FRONTEND noninteractive

RUN apt-get -qq update
RUN apt-get install -y build-essential yasm nasm gcc clang  \
                       python-dev python-pip                \
                       cmake valgrind doxygen               \
                       git curl net-tools                   \
                       vim neovim cscope ctags              \
                       imagemagick

ENV HOME_DIR     /root
ENV PROJECT_DIR  $HOME_DIR/Project

RUN mkdir -p $PROJECT_DIR
RUN git clone https://github.com/osom8979/opm.git   $PROJECT_DIR/opm
RUN git clone https://github.com/osom8979/tbag.git  $PROJECT_DIR/tbag

WORKDIR $PROJECT_DIR/opm
RUN /bin/bash install.sh

VOLUME ["/Public"]

WORKDIR $HOME_DIR
CMD ["/bin/bash"]

