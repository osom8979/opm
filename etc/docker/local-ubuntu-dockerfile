FROM ubuntu:18.04
MAINTAINER zer0 <osom8979@gmail.com>

ENV DEBIAN_FRONTEND noninteractive

RUN apt-get -qq update
RUN apt-get install -y vim neovim build-essential gcc cscope ctags git cmake curl clang

ENV HOME_DIR     /root
ENV PROJECT_DIR  $HOME_DIR/Project

RUN mkdir -p $PROJECT_DIR
RUN git clone https://github.com/osom8979/opm.git $PROJECT_DIR/opm
WORKDIR $PROJECT_DIR/opm
RUN /bin/bash install.sh
#RUN vim +NeoBundleInstall +qall

WORKDIR $HOME_DIR
CMD ["/bin/bash"]

