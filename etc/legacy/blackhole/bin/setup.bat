@echo off

IF NOT DEFINED BLACKHOLE_ROOT (
IF NOT EXIST "%1" (
SET BLACKHOLE_ROOT=%CD%\..
) ELSE (
SET BLACKHOLE_ROOT=%1
)
)

SET BH_ROOT=%BLACKHOLE_ROOT%
SET HOME=%BLACKHOLE_ROOT%
SET ROOT=%BLACKHOLE_ROOT%

SET BH_BACKUP=%BH_ROOT%\backup
SET BH_BIN=%BH_ROOT%\bin
SET BH_DOC=%BH_ROOT%\doc
SET BH_LIB=%BH_ROOT%\lib
SET BH_PROGRAM=%BH_ROOT%\program

REM PROGRAM List.
SET SEVENZIP_BIN=%BH_PROGRAM%\7za-9.20
SET SVN_BIN=%BH_PROGRAM%\svn-1.7.5\bin
REM SET GIT_BIN=%BH_PROGRAM%\git-1.7.10\bin
SET HTTPD_BIN=%BH_PROGRAM%\httpd-2.2.22\bin
SET GNUWIN32_BIN=%BH_PROGRAM%\gnuwin32\bin
SET VIM_BIN=%BH_PROGRAM%\vim-7.3

REM Java developer.
SET JAVA_X86_HOME=%BH_PROGRAM%\jdk-1.7.0_17
SET JAVA_X64_HOME=%BH_PROGRAM%\jdk-1.7.0_17-x64
SET JAVA_HOME=%JAVA_X64_HOME%
SET JAVA_BIN=%JAVA_HOME%\bin

REM Python developer.
SET PYTHON_X86_BIN=%BH_PROGRAM%\python-3.2.3
SET PYTHON_X64_BIN=%BH_PROGRAM%\python-3.2.3-x64
SET PYTHON_BIN=%PYTHON_X64_BIN%

REM MinGW developer.
SET MINGW_X86_HOME=%BH_PROGRAM%\mingw32
SET MINGW_X64_HOME=%BH_PROGRAM%\mingw64
SET MINGW_HOME=%MINGW_X86_HOME%
SET MINGW_BIN=%MINGW_HOME%\bin

REM Android Developer Tools.
SET ANDROID_X86_NDK=%BH_LIB%\android-ndk-r8e
SET ANDROID_X64_NDK=%BH_LIB%\android-ndk-r8e-x64
SET ANDROID_NDK=%ANDROID_X64_NDK%
SET NDK_HOME=%ANDROID_NDK%
SET NDK_ROOT=%ANDROID_NDK%
SET ANDROID_HOME=%BH_LIB%\android-sdk-windows
SET ANDROID_SDK=%ANDROID_HOME%
SET ANDROID_BIN=%ANDROID_SDK%\tools;%ANDROID_SDK%\platform-tools;%ANDROID_NDK%

REM Eclipse IDE.
SET ECLIPSE_3_72_X86_BIN=%BH_PROGRAM%\eclipse-3.7.2
SET ECLIPSE_3_72_X64_BIN=%BH_PROGRAM%\eclipse-3.7.2-x64
SET ECLIPSE_4_2_X64_BIN=%BH_PROGRAM%\eclipse-4.2-x64
SET ECLIPSE_X86_BIN=%ECLIPSE_3_72_X86_BIN%
SET ECLIPSE_X64_BIN=%ECLIPSE_3_72_X64_BIN%
SET ECLIPSE_BIN=%ECLIPSE_X64_BIN%

REM Programming ETC.
SET CMAKE_BIN=%BH_PROGRAM%\cmake-2.8.10.2\bin
SET CYGWIN=%BH_PROGRAM%\cygwin
SET CYGPATH=%CYGWIN%

REM Apache ANT.
SET ANT_HOME=%BH_PROGRAM%\ant-1.9.0
SET ANT_BIN=%ANT_HOME%\bin

REM Doxygen.
SET DOXYGEN_X86_HOME=%BH_PROGRAM%\doxygen-1.8.3.1
SET DOXYGEN_X64_HOME=%BH_PROGRAM%\doxygen-1.8.3.1-x64
SET DOXYGEN_HOME=%DOXYGEN_X64_HOME%
SET DOXYGEN_BIN=%DOXYGEN_HOME%\bin

REM QT
SET QT_HOME=%BH_LIB%\qt-5.0.2
SET QT_CREATOR_BIN=%QT_HOME%\Tools\QtCreator\bin

REM PATH.
SET PATH_ADD=;%SEVENZIP_BIN%;%SVN_BIN%;%HTTPD_BIN%;%GNUWIN32_BIN%;%VIM_BIN%;
SET PATH_PROGRAMMING_ADD=%JAVA_BIN%;%PYTHON_BIN%;%MINGW_BIN%;%ANDROID_BIN%;%ECLIPSE_BIN%;%CMAKE_BIN%;%ANT_BIN%;%DOXYGEN_BIN%;%QT_CREATOR_BIN%;
SET PATH=%PATH_ADD%;%PATH_PROGRAMMING_ADD%;%PATH%

ECHO.
ECHO ------------------------------------
ECHO Setup blackhole project environment.
ECHO ------------------------------------
ECHO.
ECHO BLACKHOLE_ROOT=%BLACKHOLE_ROOT%
ECHO JAVA_HOME=%JAVA_HOME%
ECHO PYTHON_BIN=%PYTHON_X64_BIN%
ECHO MINGW_HOME=%MINGW_HOME%
ECHO ECLIPSE_BIN=%ECLIPSE_BIN%
ECHO CMAKE_BIN=%CMAKE_BIN%
ECHO CYGWIN=%CYGWIN%
ECHO.
