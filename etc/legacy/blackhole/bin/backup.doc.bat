@echo off

CALL setup.bat

SET _BACKUP_EXE=%SEVENZIP_BIN%\7za.exe
SET _BACKUP_DIR=%BH_DOC%\wiki
SET _ARCHIVE_TYPE=7z
SET _OUTPUT_DIR=%BH_BACKUP%\doc
SET _OUTPUT_FILE=backup.%DATE%.%_ARCHIVE_TYPE%

IF NOT EXIST %_BACKUP_EXE%  EXIT /B 2
IF NOT EXIST %_BACKUP_DIR%  EXIT /B 2
IF     EXIST %_OUTPUT_FILE% EXIT /B 2

IF NOT EXIST %_OUTPUT_DIR% MKDIR %_OUTPUT_DIR%

%_BACKUP_EXE% a -t%_ARCHIVE_TYPE% "%_OUTPUT_DIR%\%_OUTPUT_FILE%" "%_BACKUP_DIR%\"
